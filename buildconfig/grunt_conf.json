{
	"coffee": {
		"options": {
			"bare": true
		},
		"scripts": {
			 "expand"	: true
			,"cwd"		: "coffee/"
			,"src"		: ["**/*.coffee"]
			,"dest"		: "js/"
			,"ext"		: ".js"
		}
	},

	"reload": {
		"proxy": {
			"host": "localhost"
		}
	},

	"watch": {
		"options": {
			"livereload": true
		},
		"scripts": {
			"files": [
				 "coffee/**/*.coffee"
				,"coffee/**/*.hbs"
			],
			"tasks": [
				 "newer:coffee"
				,"newer:copy:templates"
				,"reload"
			]
		}
	},

	"copy": {
		"index": {
			"files": [
				{
					"src": "index_former.html",
					"dest": "index.html"
				}
			]
		},
		"templates": {
			"files": [
				{
					"expand": true,
					"cwd": "coffee/",
					"src": ["**/*.hbs"],
					"dest": "js/"
				}
			]
		}
	}
}